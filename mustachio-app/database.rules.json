{
  "rules": {
    "rooms": {
      ".read": true,
      ".write": true,
      "$roomCode": {
        ".validate": "newData.hasChildren(['code', 'hostId', 'name', 'status', 'players'])",
        "players": {
          "$playerId": {
            ".validate": "newData.hasChildren(['id', 'name', 'isHost'])"
          }
        }
      }
    }
  }
}
